{% extends "structure/parcel-hero/_layout.njk" %}

{% block content %}

<section class="p-4 bg-cover-lg text-center">
  <h2 class="text-title-confirmation mb-3"><img class="mr-4" src="../img/icons/icon-check.png" alt=""> Your parcel is booked!</h2>
  <div class="text-neutral-middle mb-2">Your shipment will be collected on <strong>Tuesday, 30 April, 2019</strong></div>
  <div class="text-neutral-small">A confirmation email has been sent to <strong>john.smith@gmail.com</strong></div>

  <div class="container mt-3">
    <div class="row">
      <div class="col-md-10 offset-md-1">
        <div class="bg-white p-3 border">
          <div class="text-regular-primary text-center">Sign up & save on your next shipment</div>
          <div class="container-fluid mt-3 mb-3">
            <div class="row justify-content-center">
              <div class="col-md-3 d-flex align-items-center justify-content-start fw-500"><img class="mr-2" src="../img/icons/icon-check-small.png" alt="">View order history</div>
              <div class="col-md-3 d-flex align-items-center justify-content-center fw-500"><img class="mr-2" src="../img/icons/icon-check-small.png" alt="">Checkout faster</div>
              <div class="col-md-3 d-flex align-items-center justify-content-end fw-500"><img class="mr-2" src="../img/icons/icon-check-small.png" alt="">Save up to 8%</div>
            </div>
          </div>
          <div class="container-fluid mt-4 mb-3">
            <div class="row justify-content-center">
              <div class="col-md-6 d-flex align-items-center justify-content-center">
                <input type="password" placeholder="Set a password" name="confirmation-password" class="form-control w-100 not-rounded dark-theme">
              </div>
              <div class="col-md-3 d-flex align-items-center justify-content-center">
                <button class="btn btn-primary not-rounded w-100">SIGN UP</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="p-5">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="border p-4 border-success bw-2">
          Printing information
        </div>
      </div>
      <div class="col-md-4">
        <div class="border p-4 border border-primary bw-2">
          Important information
        </div>
      </div>
    </div>
  </div>
</section>

{% endblock %}

{% block scripts %}
{% endblock %}