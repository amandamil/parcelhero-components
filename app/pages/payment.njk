{% extends "structure/parcel-hero/_layout.njk" %}

{% block content %}

<section>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <table class="payment-table border-bottom">
          <tbody>
            <tr>
              <td>Sub total</td>
              <td class="text-right">£13.13</td>
            </tr>
            <tr>
              <td>Wallet balance <span class="text-dark ml-1"><strong>Remove</strong></span></td>
              <td class="text-right">-£12.56</td>
            </tr>
            <tr>
              <td>VAT</td>
              <td class="text-right">£2.43</td>
            </tr>
            <tr class="text-neutral-medium text-dark">
              <td>TOTAL</td>
              <td class="text-right">£3.56</td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-md-12 text-right mt-3 mb-3">
        <div class="collapse-toggler simple-primary text-right" data-toggle="collapse" data-target="#collapsePromo" aria-expanded="false" aria-controls="collapsePromo">Enter promo code <i class="fas fa-chevron-down ml-1"></i></div>
        <div class="collapse" id="collapsePromo">
          <div class="pt-2">
            <input type="text" autocomplete="new-promocode" placeholder="Enter promo code" name="promocode" class="form-control not-rounded dark-theme w-25 w-md-100">
          </div>
        </div>
      </div>
      <div class="col-md-12 mb-4">
        <h2 class="text-medium-m">Your details <i class="icon-help presset-icon-medium ml-2"></i></h2>
        <p>We need to know who to contact if any issues occur.</p>
        <div class="text-small-gray">
          <label class="radio mt-4 mb-4">
            <input type="radio" value="0" name="radio-1" checked>
            <span class="checkmark"></span>
            I am the receiver: <strong>Peter Jones</strong>
          </label>
          <label class="radio mt-4 mb-4">
            <input type="radio" value="1" name="radio-1" checked>
            <span class="checkmark"></span>
            I am the shipper: <strong>John Smith</strong>
          </label>
          <label class="radio mt-4 mb-4">
            <input type="radio" value="2" name="radio-1" checked>
            <span class="checkmark"></span>
            Someone else
          </label>
        </div>
      </div>
      <div class="col-md-12 mb-4">
        <div class="d-flex justify-content-between">
          <h2 class="text-medium-m">Payment method</h2>
          <div><img src="../img/icons/verisign-logo.png" alt=""></div>
        </div>
        <div class="d-flex">
          <div class="text-dark-large">Total to pay: £3.56</div>
          <div class="element-group theme-dark no-label ml-4">
            <label class="element-static-label">
              <input type="checkbox" name="checkbox-1" class="element-input" data-materialize />
              Private purchase
            </label>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


{% endblock %}

{% block scripts %}
{% endblock %}